<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/container"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
>
  <ImageView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:adjustViewBounds="true"
      android:background="@drawable/login_bg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:layout_marginLeft="8dp"
                >
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/phone"
                    android:layout_gravity="center_vertical"
                    />

                <EditText
                    android:id="@+id/login_username"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:hint="@string/person_username_hint_txt"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_small_gray"
                    android:background="@android:color/transparent"
                    android:maxLines="1"
                    android:singleLine="true"

                    />
                <!--            android:text="18456593220"-->

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:background="@color/color_small_gray"
                android:layout_marginTop="6dp"
                />

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="8dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/lock"
                    android:layout_gravity="center_vertical"
                    />
                <EditText
                    android:id="@+id/login_pass"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:hint="@string/person_password_hint_txt"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_small_gray"
                    android:inputType="textPassword"
                    android:background="@android:color/transparent"
                    android:maxLines="1"
                    android:singleLine="true"
                    />
                <!-- android:text="111111"-->

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:background="@color/color_small_gray"
                android:layout_marginTop="6dp"
                />

        </LinearLayout>

        <TextView
            android:visibility="gone"
            android:layout_marginTop="12dp"
            android:id="@+id/forget_pass_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_forget"
            android:background="@drawable/listview_item_click_select3"
            android:layout_gravity="right"
            android:padding="8dp"
            android:textSize="@dimen/app_text_size_first"
            android:textColor="@color/color_gray"
            android:layout_marginRight="8dp"
            />

        <TextView
            android:layout_marginTop="60dp"
            android:id="@+id/login_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome_login"
            android:background="@drawable/login_selector2"
            android:textSize="@dimen/app_text_size_most"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:gravity="center_horizontal"
            />


    </LinearLayout>


</FrameLayout>