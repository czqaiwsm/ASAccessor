<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/bg_main"
              android:orientation="vertical"

    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/_10dp"
        android:background="@color/white"
        android:layout_marginBottom="0.5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.accessories.seller.view.RoundImageView
            android:id="@+id/head_photo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="@dimen/_10dp"
            android:background="@drawable/head_photo"
            />

        <TextView
            android:id="@+id/nameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/head_photo"
            android:singleLine="true"
            android:text="南阳汽车用一片"
            android:textColor="#000000"
            android:textSize="@dimen/app_text_size_normal"/>

        <TextView
            android:id="@+id/descTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/head_photo"
            android:layout_toRightOf="@+id/head_photo"
            android:singleLine="true"
            android:text="Tel:18677779999"
            android:textColor="#999999"
            android:textSize="@dimen/app_text_size_min"/>

        <TextView
            android:id="@+id/timeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/app_text_size_min"
            android:text="17分钟前"
            android:textColor="@color/color_999"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    </LinearLayout>

</LinearLayout>