<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:gravity="center_vertical"
>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10dp"
        android:layout_marginRight="@dimen/_10dp"
        >

        <com.accessories.seller.view.RoundImageView
            android:id="@+id/phoneImg"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="@dimen/_10dp"
            android:background="@drawable/head_photo"
            />

        <TextView
            android:id="@+id/nameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/phoneImg"
            android:singleLine="true"
            android:text="南阳汽车用一片"
            android:textColor="#000000"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="2dp"
            android:textSize="@dimen/app_text_size_normal"
            android:maxLength="14"
            android:ellipsize="middle"/>

        <TextView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/phoneImg"
            android:layout_toRightOf="@+id/phoneImg"
            android:singleLine="true"
            android:text="18677779999"
            android:layout_marginTop="2dp"
            android:textColor="#999999"
            android:textSize="@dimen/app_text_size_min"/>
        <TextView android:id="@+id/dateTime"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/color_small_gray"
                  android:textSize="16sp"
                  android:text="2天前"
                  android:singleLine="true"
                  android:gravity="center_vertical"
                  android:layout_centerVertical="true"
                  android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <View
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:background="@color/bg_line"
            android:layout_below="@+id/phoneImg"
            android:layout_alignLeft="@+id/phoneImg"
            android:layout_marginRight="@dimen/msg_margin"
    />
</LinearLayout>